{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "build": "pnpm run clean && tsc",
    "start": "tsx src/index.ts",
    "better-auth:generate": "npx @better-auth/cli generate --config src/lib/auth.ts --output src/lib/db/schemas/auth.ts",
    "migrate:support-chat": "tsx src/migrations/runSupportChatMigration.ts",
    "verify:support-chat": "tsx src/migrations/verifyMigration.ts",
    "migrate:message-reads": "tsx src/migrations/addMessageReadsTable.ts",
    "test:unread-messages": "tsx src/migrations/testUnreadMessages.ts",
    "migrate:weight-height": "tsx src/migrations/addWeightHeightToPatients.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-validator": "^0.5.0",
    "@neondatabase/serverless": "^1.0.0",
    "better-auth": "^1.2.7",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.9",
    "node-mailjet": "^6.0.8",
    "socket.io": "^4.8.1",
    "ts-node-dev": "^2.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
